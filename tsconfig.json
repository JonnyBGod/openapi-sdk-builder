{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "mapRoot": "src",
    "module": "commonjs",
    "outDir": "dist",
    "sourceMap": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node",
      "chalk",
      "optimist"
    ]
  },
  "exclude": [
    "node_modules",
    "tests"
  ]
}
